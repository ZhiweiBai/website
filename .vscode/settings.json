{
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true,
    "**/.pnpm-store": true,
    "**/.netlify": true,
    "**/.astro": true,
  },
  "[javascript]": {
    "editor.defaultFormatter": "astro-build.astro-vscode",
  },
  "[typescript]": {
    "editor.defaultFormatter": "astro-build.astro-vscode",
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
}
