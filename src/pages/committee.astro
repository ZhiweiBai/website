---
import BaseHead from '../components/BaseHead.astro'
import Body from '../components/Body.astro'
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title="Committee" description="Committee Members" />
  </head>
  <Body>
    <Header />
    <main class="pt-[56px]">
      <div class="mx-auto max-w-4xl px-4 py-8">
        <div class="prose prose-lg dark:prose-invert mx-auto">
          <div>
            <h2 class="mb-6 text-2xl font-semibold">
              Committee Members (Alphabetical Order)
            </h2>

            <div class="space-y-4">
              <div
                class="flex flex-col border-b border-gray-200 py-3 sm:flex-row sm:items-center sm:justify-between dark:border-gray-600"
              >
                <div>
                  <a
                    href="https://www.math.sjtu.edu.cn/Default/teachershow/tags/MDAwMDAwMDAwMLKIet0"
                    class="text-lg font-semibold text-blue-600 underline hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300"
                  >
                    Tao Luo
                  </a>
                </div>
                <div class="mt-1 text-gray-600 sm:mt-0 dark:text-gray-400">
                  Shanghai Jiao Tong University
                </div>
              </div>

              <div
                class="flex flex-col border-b border-gray-200 py-3 sm:flex-row sm:items-center sm:justify-between dark:border-gray-600"
              >
                <div>
                  <a
                    href="https://zheng-homepage.netlify.app/"
                    class="text-lg font-semibold text-blue-600 underline hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300"
                  >
                    Zheng Ma
                  </a>
                </div>
                <div class="mt-1 text-gray-600 sm:mt-0 dark:text-gray-400">
                  Shanghai Jiao Tong University
                </div>
              </div>

              <div
                class="flex flex-col border-b border-gray-200 py-3 sm:flex-row sm:items-center sm:justify-between dark:border-gray-600"
              >
                <div>
                  <a
                    href="https://ins.sjtu.edu.cn/people/xuzhiqin/"
                    class="text-lg font-semibold text-blue-600 underline hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300"
                  >
                    Zhi-Qin John Xu
                  </a>
                </div>
                <div class="mt-1 text-gray-600 sm:mt-0 dark:text-gray-400">
                  Shanghai Jiao Tong University
                </div>
              </div>

              <div
                class="flex flex-col py-3 sm:flex-row sm:items-center sm:justify-between"
              >
                <div>
                  <a
                    href="https://yaoyuzhang1.github.io/"
                    class="text-lg font-semibold text-blue-600 underline hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300"
                  >
                    Yaoyu Zhang
                  </a>
                </div>
                <div class="mt-1 text-gray-600 sm:mt-0 dark:text-gray-400">
                  Shanghai Jiao Tong University
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <Footer />
    </main>
  </Body>
</html>
